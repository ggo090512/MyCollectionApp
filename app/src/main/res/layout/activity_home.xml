<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.MyCollection.Acitvity.HomeActivity"
    tools:showIn="@layout/app_bar_drawer"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/toolbar6"
            android:paddingHorizontal="10dp"
            android:paddingTop="60dp">

                <FrameLayout
                    android:layout_width="398dp"
                    android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|left"
                            android:text="MY COLLECTION"
                            android:textColor="@color/whiteTextColor"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/txtCity"
                            android:layout_width="207dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:layout_marginTop="20dp"
                            android:text="Trải nghiệm ẩm thực"
                            android:textColor="@color/whiteTextColor"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="320dp"
                            android:src="@drawable/icons8_hamburger_100" />
                </FrameLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"

            app:cardCornerRadius="12dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:id="@+id/seach_icon"
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/search"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_menu"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>